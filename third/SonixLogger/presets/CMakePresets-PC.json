{
    "version": 4,
    "configurePresets": [
        {
            "name": "BasePC",
            "hidden": true,
            "environment": {
                "VCINSTALLDIR": "D:/MSVC/BuildTools/VC"
            },
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "D:/vcpkg/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static-md"
            }
        },
        {
            "name": "PcDebug",
            "inherits": [
                "BasePC"
            ],
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        },
        {
            "name": "PcRelease",
            "inherits": [
                "BasePC"
            ],
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "PcDebugBuild",
            "configurePreset": "PcDebug",
            "jobs": 8,
            "configuration": "Debug"
        },
        {
            "name": "PcReleaseBuild",
            "configurePreset": "PcRelease",
            "jobs": 8,
            "configuration": "Release"
        }
    ]
}
